{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "lib",
        "allowJs": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["index.ts", "src/**/*.ts"]
}
